<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="Default" status="warn">
    <Appenders>
        <RollingFile
                name="file"
                fileName="logs/miner.log"
                filePattern="logs/miner.log.%d{yyyy-MM-dd}.gz"
                ignoreExceptions="false">
            <PatternLayout>
                <Pattern>%date{ISO8601} %level %X{streamer_name} - %message%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger level="warn" name="org.java_websocket" additivity="false">
            <AppenderRef ref="file"/>
        </Logger>
        <Logger level="warn" name="org.kitteh.irc" additivity="false">
            <AppenderRef ref="console"/>
        </Logger>
        <Logger level="warn" name="io.netty" additivity="false">
            <AppenderRef ref="console"/>
        </Logger>
        <Logger level="warn" name="com.zaxxer.hikari" additivity="false">
            <AppenderRef ref="file"/>
        </Logger>
        <Root level="info" additivity="false">
            <AppenderRef ref="file"/>
        </Root>
    </Loggers>
</Configuration>
